      all_goals sorry
  all_goals grind [ParAssoc]


private inductive ChoiceNil : (Process Name Constant) ‚Üí (Process Name Constant) ‚Üí Prop where
  | nil : ChoiceNil (choice p nil) p
  | id : ChoiceNil p p

/-- P + ùüé ~ P -/
theorem bisimilarity_choice_nil : (choice p nil) ~[lts (defs := defs)] p := by
  refine ‚ü®ChoiceNil, ChoiceNil.nil, ?_‚ü©
  intro s1 s2 hr Œº
  apply And.intro <;> cases hr
  case left.nil =>
    unfold lts
    grind [cases Tr, ChoiceNil]
  case right.nil =>
    intro s2' htr
    exists s2'
    constructor
    ¬∑ apply Tr.choiceL
      assumption
    ¬∑ exact ChoiceNil.id
  all_goals grind [ChoiceNil]

private inductive ChoiceIdem : (Process Name Constant) ‚Üí (Process Name Constant) ‚Üí Prop where
  | idem : ChoiceIdem (choice p p) p
  | id : ChoiceIdem p p

/-- P + P ~ P -/
theorem bisimilarity_choice_idem :
  (choice p p) ~[lts (defs := defs)] p := by
  exists ChoiceIdem
  apply And.intro
  case left => grind [ChoiceIdem]
  case right =>
    intro s1 s2 hr Œº
    apply And.intro <;> cases hr
    case left.idem =>
      unfold lts
      grind [cases Tr, ChoiceIdem]
    case left.id =>
      grind [ChoiceIdem]
    case right.idem =>
      intro s1' htr
      exists s1'
      unfold lts at *
      grind [Tr, ChoiceIdem]
    case right.id =>
      grind [ChoiceIdem]

private inductive ChoiceComm : (Process Name Constant) ‚Üí (Process Name Constant) ‚Üí Prop where
  | choiceComm : ChoiceComm (choice p q) (choice q p)
  | bisim : (p ~[lts (defs := defs)] q) ‚Üí ChoiceComm p q

/-- P + Q ~ Q + P -/
theorem bisimilarity_choice_comm : (choice p q) ~[lts (defs := defs)] (choice q p) := by
  exists @ChoiceComm Name Constant defs
  repeat constructor
  simp only [Bisimulation]
  intro s1 s2 hr Œº
  cases hr
  case choiceComm =>
    rename_i p q
    constructor
    case left =>
      intro s1' htr
      exists s1'
      constructor
      ¬∑ unfold lts
        cases htr with grind [Tr.choiceR, Tr.choiceL]
      ¬∑ constructor
        grind [Bisimilarity.refl]
    case right =>
      intro s1' htr
      exists s1'
      constructor
      ¬∑ unfold lts
        cases htr with grind [Tr.choiceR, Tr.choiceL]
      ¬∑ constructor
        grind [Bisimilarity.refl]
  case bisim h =>
    constructor
    case left =>
      intro s1' htr
      have hb := Bisimulation.follow_fst (Bisimilarity.is_bisimulation lts) h htr
      obtain ‚ü®s2', htr2, hr2‚ü© := hb
      exists s2'
      apply And.intro htr2
      constructor; assumption
    case right =>
      intro s2' htr
      have hb := Bisimulation.follow_snd (Bisimilarity.is_bisimulation lts) h htr
      obtain ‚ü®s1', htr1, hr1‚ü© := hb
      exists s1'
      apply And.intro htr1
      constructor; assumption

