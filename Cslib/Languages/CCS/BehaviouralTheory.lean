theorem bisimilarity_par_assoc :
  (par p (par q r)) ~[lts (defs := defs)] (par (par p q) r) := by
  refine ‚ü®ParAssoc, ParAssoc.assoc, ?_‚ü©
  intro s1 s2 hr Œº
  apply And.intro <;> cases hr
  case right.assoc =>
    intro s2' htr
    unfold lts at *
    cases htr
    case parL htr =>
      cases htr
      case parL p q r p' _ =>
        exists p'.par (q.par r)
        grind [Tr.parL, ParAssoc]
      case parR p q r q' _ =>
        exists p.par (q'.par r)
        grind [Tr.parL, Tr.parR, ParAssoc]
      case com p q r Œº p' q' _ _ =>
        exists p'.par (q'.par r)
        grind [Tr.com, Tr.parL, ParAssoc]
    case parR p q r r' htr =>
      exists p.par (q.par r')
      grind [Tr.parR, ParAssoc]
    case com p q r Œº p' r' htr htr' =>
      cases htr
      case parL p' _ =>
        exists p'.par (q.par r')
        grind [Tr.parR, Tr.com, ParAssoc]
      case parR q' _ =>
        exists p.par (q'.par r')
        grind [Tr.parR, Tr.com, ParAssoc]
      case com Œº p' q' _ _ =>
        sorry
  case left.assoc =>
    intro s2' htr
    unfold lts at *
    cases htr
    case parR htr =>
      cases htr
      case parL p q r q' _ =>
        exists (p.par q').par r
        grind [Tr.parL, Tr.parR, ParAssoc]
      case parR p q r r' _ =>
        exists (p.par q).par r'
        grind [Tr.parL, Tr.parR, ParAssoc]
      case com p q r Œº q' r' _ _ =>
        exists (p.par q').par r'
        constructor
        ¬∑ apply Tr.com (Œº := Œº)
          ¬∑ apply Tr.parR; assumption
          ¬∑ assumption
        ¬∑ exact ParAssoc.assoc
    case parL p q r p' htr =>
      exists (p'.par q).par r
      grind [Tr.parL, ParAssoc]
    case com p q r Œº p' r' htr htr' =>
      cases Œº <;> rw [Act.co] at htr'
      case œÑ =>
        cases htr'
        case parL q' _ =>
          use (p'.par q').par r
          grind [Tr.parL, Tr.com, Act.co, ParAssoc]
        case parR r' _ =>
          refine ‚ü®(p'.par q).par r', ?_, ParAssoc.assoc‚ü©
          apply Tr.com (Œº := œÑ) <;> grind [Tr.parL, Act.co]
          -- need the apply here bc grind doesn't see that œÑ = œÑ.co in order to pattern match
          -- for Tr.com
        case com q' r' _ _=>
